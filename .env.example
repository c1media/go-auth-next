# Go Auth Template Environment Variables
# Copy this to .env and fill in your production values

# Database Configuration
POSTGRES_DB=auth_template
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here
DATABASE_URL=postgres://postgres:your-secure-password-here@postgres:5432/auth_template?sslmode=disable

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-at-least-32-characters-long

# Session Configuration  
NEXTAUTH_SECRET=your-nextauth-secret-at-least-32-characters-long

# Email Configuration (Resend)
RESEND_API_KEY=your-resend-api-key-here
FROM_EMAIL=auth@yourdomain.com
FROM_NAME=Your App Name

# Frontend URLs
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXTAUTH_URL=http://localhost:3000

# Optional: Redis Configuration
REDIS_URL=redis://redis:6379

# Optional: Custom Ports
BACKEND_PORT=8080
FRONTEND_PORT=3000